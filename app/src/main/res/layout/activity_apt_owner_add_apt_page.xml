<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#36000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/aptOwnerAddAptPageAddNewAptTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Add new apartment"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintBaseline_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/tv_parent_aptOwnerAddAptPage"
                android:layout_width="301dp"
                android:layout_height="60dp"
                android:layout_marginTop="36dp"
                android:text="Select City"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.695"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aptOwnerAddAptPageAddNewAptTitle"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/sp_parent_aptOwnerAddAptPage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/login_page_input_bg"
                android:contentDescription="Select a city"
                android:minHeight="55dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_parent_aptOwnerAddAptPage"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_parent_aptOwnerAddAptPage"
                app:layout_constraintTop_toBottomOf="@+id/tv_parent_aptOwnerAddAptPage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_child_aptOwnerAddAptPage"
                android:layout_width="282dp"
                android:layout_height="60dp"
                android:layout_marginTop="76dp"
                android:text="Select Area"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_parent_aptOwnerAddAptPage"
                app:layout_constraintTop_toBottomOf="@+id/tv_parent_aptOwnerAddAptPage"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/sp_child_aptOwnerAddAptPage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/login_page_input_bg"
                android:contentDescription="Select an area"
                android:minHeight="55dp"
                app:layout_constraintEnd_toEndOf="@+id/sp_parent_aptOwnerAddAptPage"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sp_parent_aptOwnerAddAptPage"
                app:layout_constraintTop_toBottomOf="@+id/sp_parent_aptOwnerAddAptPage"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/aptOwnerAddAptPageCustomAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/login_page_input_bg"
                android:ems="10"
                android:hint="Example: 3rd floor, house: 2, road: 2, tejkunipara"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/tvCustomAddressTitleAptOwnerAddAptPage"
                app:layout_constraintHorizontal_bias="0.695"
                app:layout_constraintStart_toStartOf="@+id/tvCustomAddressTitleAptOwnerAddAptPage"
                app:layout_constraintTop_toBottomOf="@+id/tvCustomAddressTitleAptOwnerAddAptPage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvCustomAddressTitleAptOwnerAddAptPage"
                android:layout_width="301dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:text="Enter rest of the address"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/sp_child_aptOwnerAddAptPage"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sp_child_aptOwnerAddAptPage"
                app:layout_constraintTop_toBottomOf="@+id/sp_child_aptOwnerAddAptPage"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/aptOwnerAddAptPageAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Add"
                app:layout_constraintEnd_toEndOf="@+id/aptOwnerAddAptPageCustomAddressInput"
                app:layout_constraintHorizontal_bias="0.947"
                app:layout_constraintStart_toStartOf="@+id/aptOwnerAddAptPageCustomAddressInput"
                app:layout_constraintTop_toBottomOf="@+id/aptOwnerAddAptPageCustomAddressInput"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</RelativeLayout>